<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <color android:color="@color/white" />
            </item>
            <item android:bottom="5dp" android:drawable="@color/colorAccent" />
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item>
                <color android:color="@color/white" />
            </item>
            <item android:bottom="0dp" android:drawable="@color/colorAccent" />
        </layer-list>
    </item>

</selector>